using namespace std;
#include <iostream>
#include <algorithm>

int main()
{
	int arr[] = {3,2,1};
	cout << "pre_permutation\n";

	do
	{
		cout << arr[0] << ' ' << arr[1] << ' ' << arr[2] << endl;
	}while(pre_permutation(arr,arr+3));

	int arr1[] = {1,2,3};
	cout << "next_permutation\n";

	do
	{
		cout << arr1[0] << ' ' << arr1[1] << ' ' << arr1[2] << endl;
	}while(next_permutation(arr1,arr1+3));

		return 0;
}
